@model ECS.Models.RegisterVM

@{
    Layout = "_Layout";  // Nếu bạn sử dụng layout cho ứng dụng
}

<div class="container">
    <h2>Register</h2>

    <form method="post" class="form-signup" asp-action="Register" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" name="Username" id="Username" class="form-control" required placeholder="Enter your username" />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" name="Email" id="Email" class="form-control" required placeholder="Enter your email" />
        </div>

        <div class="form-group">
            <label for="PasswordHash">Password</label>
            <input type="password" name="PasswordHash" id="PasswordHash" class="form-control" required placeholder="Enter your password" />
        </div>

          <div class="form-group">
            <label for="ConfirmPassword">ConfirmPassword</label>
            <input type="password" name="ConfirmPassword" id="ConfirmPassword"  class="form-control" required placeholder="Enter your ConfirmPassword" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>

        <div class="form-group text-center">
            <p>Already have an account? <a href="/User/Login">Login here</a></p>
        </div>
    </form>
</div>

<style>
    /* Custom CSS */
    .container {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-signup {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    input.form-control {
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ddd;
        width: 100%;
    }

    button.btn {
        font-size: 16px;
        padding: 10px;
        border-radius: 5px;
    }

    button.btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        button.btn-primary:hover {
            background-color: #0056b3;
        }

    .text-center p {
        font-size: 14px;
    }

    .text-center a {
        color: #007bff;
    }

        .text-center a:hover {
            text-decoration: underline;
        }
</style>
